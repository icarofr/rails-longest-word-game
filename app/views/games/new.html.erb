<div class="grid grid-cols-10 gap-4 mx-8 mt-16 text-white font-mono">
  <% @letters.each do |letter| %>
  <div
    class="flex letter text-center block border border-black bg-blue-400 p-4 text-4xl shadow-2xl font-bold aspect-square justify-center items-center"
  >
    <%=letter%>
  </div>
  <% end %>
</div>
  <div class="mt-16 px-16 w-full">
    <h2 class="text-md mt-2">What is the longest word you can find?</h2>
    <form
      action="/score"
      class="flex flex-wrap w-full mt-2"
      method="post"
      data-turbo="false"
    >
      <input type="hidden" name="letters" value="<%= @letters.join %>" />
      <input type="hidden" name="start_time" value="" />
      <input
        type="text"
        class="border border-gray-400 rounded-md py-3 px-2 w-11/12"
        name="word"
      />
      <input
        type="submit"
        class="rounded-md bg-white p-3 w-1/12 border-gray-300 border text-md"
        value="Play"
      />
    </form>
  </div>
</div>
<script>
    window.onload = () => {document.querySelector("input[name=start_time]").value = new Date().toString();}
</script>
